{
  "manifest_version": 3,
  "name": "自动翻译插件",
  "version": "1.0",
  "description": "图标按钮控制的英文到中文自动翻译插件，使用免费的 Google 翻译接口",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "icons": {
    "16": "icons/translate-icon.png",
    "48": "icons/translate-icon.png",
    "128": "icons/translate-icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ]
}